package orientacaoobjetos;

public class MoldeCliente {
	
	private String nome;
	private String sobrenome;
	private int idade;
	private String email;
	private int celular; //meus atributos são privados
	
	
	//então criei um construtor para usar em outras classes
	public MoldeCliente (String nome1, String sobrenome1, int idadePub, String emailPub, int celularPub)
	{
		nome=nome1;
		sobrenome=sobrenome1;
		idade=idadePub;
		email=emailPub;
		celular=celularPub;
	}
	
	public String getNomeCompleto()
	{
		String nomeCompleto = nome + " " + sobrenome + ".";
		return nomeCompleto;
	}
	
	public int getIdadeCliente()
	{
		int idadeCliente = idade;
		return idadeCliente;
	}
	
	public String getEmailCliente()
	{
		String emailCliente = email;
		return emailCliente;
	}
	
	public int getCelularCliente()
	{
		int celularCliente = celular;
		return celularCliente;
	}

}
